.store-details {
  width: 600rpx;
  height: 200rpx;
  background-color: #BAB3F7;
  border-radius: 20rpx;
  display: flex;
  position: relative;
  box-shadow: 0 8rpx 30rpx 1rpx rgba(0, 0, 0, 0.2);
}
.store-details .store-left {
  width: 200rpx;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.store-details .store-left .store-details-img {
  width: 130rpx;
  height: 130rpx;
  background-color: #ffffff;
  border-radius: 50%;
  overflow: hidden;
}
.store-details .store-left .store-details-score {
  display: flex;
  align-items: center;
  margin-top: 10rpx;
}
.store-details .store-left .store-details-score view:nth-child(2) {
  font-size: 26rpx;
  color: #fff;
  margin-left: 5rpx;
}
.store-details .store-rigth {
  width: 400rpx;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.store-details .store-rigth .shop-name {
  font-size: 30rpx;
  color: #ffffff;
  font-weight: bold;
}
.store-details .store-rigth .shop-tag {
  margin: 10rpx 0;
}
.store-details .store-rigth .shop-tag .tag {
  background-color: #BAB3F7;
  color: #fff;
  margin-left: 10rpx;
}
.store-details .store-rigth .shop-location {
  font-size: 24rpx;
  color: #D3D3D3;
}
.store-details .collection {
  position: absolute;
  display: flex;
  flex-direction: column;
  right: 30rpx;
  top: 70rpx;
  color: #ffffff;
  font-size: 26rpx;
}
