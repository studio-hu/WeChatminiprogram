.container {
  background-color: #ffffff;
  height: 100vh;
  overflow: auto;
}
.container .title {
  margin: 72rpx auto;
  text-align: center;
}
.container .title .title-min {
  color: #7062F3;
  font-size: 28rpx;
  margin-bottom: 12rpx;
}
.container .title .title-tag {
  color: #000000;
  font-size: 40rpx;
  font-weight: bold;
}
.container .select-tag {
  margin: 0 auto;
}
.container .select-tag .select-item {
  width: 532rpx;
  height: 136rpx;
  border: #BAB3F7 4rpx solid;
  margin: 0 auto;
  margin-bottom: 60rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.container .select-tag .select-icon {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 136rpx;
  width: 100rpx;
}
.container .select-tag .select-icon .image-class {
  width: 56rpx;
  height: 56rpx;
}
.container .select-tag .select-icon text {
  font-size: 24rpx;
}
.container .select-tag .select-input {
  width: 300rpx;
  height: 60rpx;
  border: #797979 1px solid;
}
.container .select-tag .select-input .select-class {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  padding: 0 15rpx;
}
.container .button-submit {
  width: 532rpx;
  height: 136rpx;
  text-align: center;
  margin: 0 auto;
}
.container .button-submit .button-class {
  width: 140rpx;
  height: 60rpx;
  background-color: #BAB3F7;
  color: #ffffff;
  border: #7062F3 1px solid;
  border-radius: 20rpx;
}
.popup {
  overflow: hidden !important;
}
