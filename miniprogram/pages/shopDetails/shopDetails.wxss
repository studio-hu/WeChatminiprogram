.shop-bg {
  background-image: url(https://636c-cloud-1g86mra2b9adddaf-1313694429.tcb.qcloud.la/image/bg.png?sign=77a469923bb030403f7e4c09e72a5e71&t=1681011137);
  background-repeat: no-repeat;
  background-size: contain;
  width: 100%;
  height: 100vh;
  overflow: auto;
  position: relative;
}
.shop-bg .customerService {
  position: fixed;
  border-radius: 50%;
  width: 80rpx;
  height: 80rpx;
  background-color: #ffffff;
  right: 30rpx;
  top: 30rpx;
  z-index: 100;
  display: flex;
  justify-content: center;
  align-items: center;
}
.shop-bg .my-shop {
  display: flex;
  justify-content: center;
  margin-top: 400rpx;
  margin-bottom: 50rpx;
}
.shop-bg .my-coupons {
  display: flex;
  align-items: center;
  flex-direction: column;
}
