.couponComment {
  position: relative;
  overflow: auto;
}
.couponComment .mycoupons {
  width: 100%;
  display: flex;
  justify-content: center;
  margin: 40rpx 0;
}
.couponComment .commentsSection {
  width: 600rpx;
  margin: 0 auto;
  margin-bottom: 50rpx;
}
.couponComment .commentsSection .commentsSection-title {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.couponComment .commentsSection .commentsSection-title .commentsSection-title-left {
  display: flex;
  align-items: center;
}
.couponComment .commentsSection .commentsSection-title .commentsSection-title-left .commentsSection-title-desc {
  font-size: 30rpx;
  color: #333333;
  margin-left: 10rpx;
}
.couponComment .commentsSection .commentsSection-content {
  font-size: 28rpx;
  margin: 10rpx 0;
}
.couponComment .commentsSection .commentsSection-img {
  display: flex;
  flex-wrap: wrap;
}
.couponComment .commentsSection .commentsSection-img .commentsSection-img-item {
  margin: 10rpx;
}
.couponComment .commentsSection .commentsSection-location {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.couponComment .commentsSection .commentsSection-location .commentsSection-location-left {
  display: flex;
  align-items: center;
}
.couponComment .commentsSection .commentsSection-location .commentsSection-location-right {
  display: flex;
  align-items: center;
}
